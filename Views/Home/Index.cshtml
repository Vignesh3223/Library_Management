<style>

    body {
        margin-top: 3em;
    }

    .carousel-inner{
        height:550px;
    }

    .img1 {
        width:100%;
        max-height:550px;
    }
    .card {
        border: 2px solid whitesmoke;
        border-radius: 10px;
        padding: 5px;
    }

    .card img {
        width: 120px;
        height: 120px;
    }

    .p1 {
        font-size: 14px;
        font-weight: 500;
        margin-top: 1.5em;
        margin-left: 1.5em;
    }

    .p2 {
        font-size: 16px;
        font-weight: 700;
    }

    .page2{
        margin-top:3em;
    }
    .page3{
        margin-top:2em;
    }

    .card1 {
        position: relative;
        width: 100%;
        height: auto;
        padding-bottom: 100%;
        overflow: hidden;
        perspective: 1000px;
    }

        .card1 img {
            width: 100%;
            height: 100%;
        }

    .flipper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
        transition: transform 0.5s;
    }

    .front,
    .back {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
    }

    .front {
        z-index: 2;
    }

    .back {
        transform: rotateY(180deg);
    }

    .card1:hover .flipper {
        transform: rotateY(180deg);
    }

</style>