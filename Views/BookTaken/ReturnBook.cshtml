@model Library.Models.Book_Taken

@{
    ViewBag.Title = "ReturnBook";
}

<h2>Return Book</h2>

<div>
    <hr />
            <div class="card" style="max-width:470px">
                <div class="row g-0" id="card-content">
                    <div class="col-md-4">
                        <img src="data:image;base64,@Convert.ToBase64String(Model.Picture)" class="rounded-start" alt="Cover">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body text-center">
                            <h3 class="card-title"> @Html.DisplayFor(model => model.BookName)</h3>
                            <p class="card-text"> @Html.DisplayFor(model => model.TakenDate)</p>
                            <p class="card-text">@Html.DisplayFor(model => model.ReturnDate)</p>
                        </div>
                    </div>
                </div>
            </div>
    <div>
        <div class="text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Return Book" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>

    <div>
        <a href="@Url.Action("Index1","Book")" class="btn btn-warning">
            <i class="fa-solid fa-arrow-left" style="color: #000000;"></i> Go Back
        </a>
    </div>
</div>
    <style>

        body {
            margin-top: 3em;
        }

        h2 {
            color: #C70039;
        }

        .card {
            margin: 10px auto 10px auto;
            background-color: #07182E;
            padding: 5px;
            border-radius: 10px;
            box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
            background-image: linear-gradient(144deg,#AF40FF, #5B42F3 50%,#00DDEB);
        }

        #card-content {
            background: rgb(5, 6, 45);
            border-radius: 5px;
            padding: 5px;
            margin: auto auto auto auto;
        }

        img {
            width: 150px;
            height: 150px;
        }

        .card-title{
            color:ghostwhite;
            padding-bottom:.5em;
        }

        .card-text {
            font-size: 18px;
            font-weight: 700;
            color: whitesmoke;
        }
</style>