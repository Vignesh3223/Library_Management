<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Public Library</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/d7200c44d8.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="@Url.Content("~/Content/images/logo.gif")" style="width:100px;height:80px" />
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Librarian"))
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Users", "Index", "User")</li>
                            <li>@Html.ActionLink("Books", "BookGenres", "Book")</li>
                            <li>@Html.ActionLink("Books Taken", "Index", "BookTaken")</li>
                            <li>@Html.ActionLink("Penalty", "Index", "Fine")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa-solid fa-circle-user" style="color: navy;"></i> @Session["name"]</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="fa-solid fa-user-pen" style="color: #000000;"></i> Edit Profile</a></li>
                                    <li><a href="@Url.Action("Logout","User")"><i class="fa-solid fa-right-from-bracket" style="color: #000000;"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                }
                if (User.IsInRole("User"))
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Books", "BookGenres", "Book")</li>
                            <li>@Html.ActionLink("Books Taken", "Index1", "BookTaken")</li>
                            <li>@Html.ActionLink("Penalty", "Index1", "Fine")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa-solid fa-circle-user" style="color: navy;"></i> @Session["name"]
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="fa-solid fa-user-pen" style="color: #000000;"></i> Edit Profile</a></li>
                                    <li><a href="@Url.Action("Logout","User")"><i class="fa-solid fa-right-from-bracket" style="color: #000000;"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                }
            }
            else
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Register", "Register", "User")</li>
                        <li>@Html.ActionLink("Login", "Index", "User")</li>
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="container ">
        @RenderBody()
        <hr />
        <footer>
            <p id="footer">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/toastr.js"></script>
    @RenderSection("scripts", required: false)

    <style>

        .navbar {
            background-color: #AED2FF;
        }

        .navbar-nav li {
            font-size: 16px;
            margin-top: 1em;
            margin-left: .5em;
            font-weight: bold;
            color: navy;
        }

        #footer {
            font-weight: 700;
            font-size: 14px;
        }
    </style>

</body>
</html>
