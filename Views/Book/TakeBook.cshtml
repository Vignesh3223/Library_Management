@model Library.Models.Book


@{
    ViewBag.Title = "TakeBook";
}

<h2>TakeBook</h2>

<div>
    <hr />
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0" id="card-content">
            <div class="col-md-4">
                <img src="data:image;base64,@Convert.ToBase64String(Model.Picture)" class="rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body text-center">
                    <h3 class="card-title"> @Html.DisplayFor(model => model.BookName)</h3>
                    <p class="card-text"> Author :  @Html.DisplayFor(model => model.Author)</p>
                    <p class="card-text"> Genre :   @Html.DisplayFor(model => model.Book_Genre.Genre)</p>
                </div>
            </div>
        </div>
    </div>
  
    @using (Html.BeginForm("TakeBook", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions text-center no-color">
            <input type="submit" value="TakeBook" class="btn btn-primary" />
        </div>
    }

<div>
    @Html.ActionLink("Back to List", "Index1")
</div>

</div>
<style>

    body {
        margin-top: 3em;
        background-color: #FFA1F5;
    }

    h2 {
        color: #C70039;
    }

    .card {
        margin: 10px auto 10px auto;
        background-color: #07182E;
        padding: 5px;
        border-radius: 10px;
        position: relative;
        box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
        background-image: linear-gradient(144deg,#AF40FF, #5B42F3 50%,#00DDEB);
    }

    #card-content {
        background: rgb(5, 6, 45);
        border-radius: 5px;
        padding:10px;
        margin: auto auto auto auto;
    }

    img{
        width:150px;
        height:170px;
    }

    h3{
        color:whitesmoke;
    }

    .card-text{
        font-size:18px;
        font-weight:700;
        color:whitesmoke;
    }

</style>