@model IEnumerable<Library.Models.Book_Taken>

@{
    ViewBag.Title = "Index";
}

<h2>Taken Books</h2>
<hr />

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.BookId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TakenDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Book.BookId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TakenDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReturnDate)
        </td>
        <td>
            @if (item.Picture != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(item.Picture)" alt="Cover">
            }
        </td>
    </tr>
}

</table>

<style>
    body{
        margin-top:3em;
    }

    img{
        width:50px;
        height:50px;
    }

    table th, td {
        text-align: center;
        font-weight: 400;
        font-size: 16px;
    }
</style>